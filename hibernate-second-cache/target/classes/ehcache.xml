<?xml version="1.0" encoding="UTF-8"?>
<ehcache>
	<diskStore path="java.io.tmpdir/ehcache" />

	<defaultCache maxEntriesLocalHeap="100" eternal="false"
		timeToIdleSeconds="120" timeToLiveSeconds="200">
		<persistence strategy="localTempSwap" />
	</defaultCache>

	<cache name="department" maxEntriesLocalHeap="200" eternal="false"
		timeToIdleSeconds="60" timeToLiveSeconds="200">
		<persistence strategy="localTempSwap" />
	</cache>
</ehcache>  